StandardWidgets:

<ColorLayout>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 255
        Rectangle:
            pos: self.pos
            size: self.size

<Line>:
    size_hint_x: None
    width: 10
    canvas:
        Color:
            rgba: .0, .0, .0, .0
        Rectangle:
            size: 1, self.height
            pos: self.center_x, self.y

<Line22>:
    #black: black
    #white: white
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Line:
            points: [100, 100, 200, 100, 100, 200]
            #points: (white.x, white.y, black.x, black.y) if (black and white) else []

<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b

    ColorLayout:

        ComboEdit:
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            pos_hint: {'center':(.5, .7)}
            hint_text:'Origen'
            height: "40dp"
            width: "270dp"
            id: _station_a
            on_text: root.on_text(self, args[1])
        ComboEdit:
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            pos_hint: {'center':(.5, .6)}
            hint_text:'Destino'
            height: "40dp"
            width: "270dp"
            id: _station_b
            on_text: root.on_text(self, args[1])
        Button:
            text: 'Obtener Ruta'
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            height: "40dp"
            width: "200dp"
            pos_hint: {'center':(.5, .5)}
            on_press: root.get_route(*args)

