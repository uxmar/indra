MainWindow:

<MainWindow>:

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: '/home/Pictures/IMG_2334.JPG'
            size: self.size

    Button:
        text: 'B1'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "90dp"
        width: "90dp"
        pos_hint: {'center':(.39, .7)}
        on_press: root.manager.current = 'inputstation'
        
    Button:
        text: 'B2'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "90dp"
        width: "90dp"
        pos_hint: {'center':(.59, .7)}
        on_press: root.get_route(*args)
        
    Button:
        text: 'B3'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "90dp"
        width: "90dp"
        pos_hint: {'center':(.39, .45)}
        on_press: root.get_route(*args)
        
    Button:
        text: 'B4'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "90dp"
        width: "90dp"
        pos_hint: {'center':(.59, .45)}
        on_press: root.get_route(*args)

<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: '/home/Pictures/IMG_2334.JPG'
            size: self.size

    ComboEdit:
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        pos_hint: {'center':(.5, .7)}
        hint_text:'Origen'
        height: "40dp"
        width: "270dp"
        id: _station_a
        on_text: root.on_text(self, args[1])
    ComboEdit:
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        pos_hint: {'center':(.5, .6)}
        hint_text:'Destino'
        height: "40dp"
        width: "270dp"
        id: _station_b
        on_text: root.on_text(self, args[1])
    Button:
        text: 'Obtener Ruta'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "40dp"
        width: "200dp"
        pos_hint: {'center':(.5, .5)}
        on_press: root.get_route(*args)
    Button:
        text: 'Go Back'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "40dp"
        width: "200dp"
        pos_hint: {'center':(.5, .3)}
        on_press: root.manager.current = 'mainwindow'
