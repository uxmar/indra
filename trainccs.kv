<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b
    route: _route
    ComboEdit:
        size_hint_y: .3, .3
        size_hint_x: .11, .11
        pos_hint: {'center':(.5, .9)}
        height: 40
        width: 270
        id: _station_a
        on_text: root.on_text(self, args[1])

    ComboEdit:
        size_hint_y: .3, .3
        size_hint_x: .11, .11
        pos_hint: {'center':(.5, .8)}
        height: 40
        width: 270
        id: _station_b
        on_text: root.on_text(self, args[1])

    Button:
        text: 'Obtener Ruta'
        size_hint_y: .3, .3
        size_hint_x: .11, .11
        height: 40
        width: 200
        pos_hint: {'center':(.5, .7)}
        on_press: root.get_route(*args)
        #~ on_release: root.manager.current = root.manager.next()

    Label:
        id: _route

<StandardWidgets2>:

    BoxLayout:
        orientation: 'vertical'
        padding: 50
