StandardWidgets:

<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b
    route: _route

    height: "200dp"
    size_hint_y: None

    GridLayout:
        cols: 2
        row_default_height: "40dp"
        row_force_default: True
        spacing: "10dp"
        padding: "10dp"

        Label:
            text: 'Origen'
        ComboEdit:
            id: _station_a
            on_text: root.on_text(self, args[1])
        Label:
            text: 'Destino'
        ComboEdit:
            id: _station_b
            on_text: root.on_text(self, args[1])

    Button:
        size_hint_y: None
        height: "40dp"
        text: 'Obtener Ruta'

    Label:
        id: _route
