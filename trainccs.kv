StandardWidgets:

<ColorLayout>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 255
        Rectangle:
            pos: self.pos
            size: self.size

<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b

    ColorLayout:

        ComboEdit:
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            pos_hint: {'center':(.5, .7)}
            height: "40dp"
            width: "270dp"
            id: _station_a
            on_text: root.on_text(self, args[1])
        ComboEdit:
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            pos_hint: {'center':(.5, .6)}
            height: "40dp"
            width: "270dp"
            id: _station_b
            on_text: root.on_text(self, args[1])
        Button:
            text: 'Obtener Ruta'
            size_hint_y: "0.3dp", "0.3dp"
            size_hint_x: "0.11dp", "0.11dp"
            height: "40dp"
            width: "200dp"
            pos_hint: {'center':(.5, .5)}
            on_press: root.get_route(*args)

