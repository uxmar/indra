#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MainWindow:

<ColorLayout>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 255
        Rectangle:
            pos: self.pos
            size: self.size

<MainWindow>:

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: '/home/Pictures/IMG_2334.JPG'
            size: self.size

    Button:
        text: 'B1'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "85dp"
        width: "85dp"
        pos_hint: {'center':(.34, .7)}
        on_release: root.manager.transition = SlideTransition(direction="up")

        
    Button:
        text: 'B2'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "85dp"
        width: "85dp"
        pos_hint: {'center':(.63, .7)}
        on_press: root.get_route(*args)
        
    Button:
        text: 'B3'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "85dp"
        width: "85dp"
        pos_hint: {'center':(.34, .45)}
        on_press: root.get_route(*args)
        
    Button:
        text: 'B4'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "85dp"
        width: "85dp"
        pos_hint: {'center':(.63, .45)}
        on_press: root.get_route(*args)

<StandardWidgets>:
    station_a: _station_a
    station_b: _station_b

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: '/home/Pictures/IMG_2334.JPG'
            size: self.size

    ComboEdit:
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        pos_hint: {'center':(.5, .7)}
        hint_text:'Origen'
        height: "40dp"
        width: "270dp"
        id: _station_a
        on_text: root.on_text(self, args[1])
    ComboEdit:
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        pos_hint: {'center':(.5, .6)}
        hint_text:'Destino'
        height: "40dp"
        width: "270dp"
        id: _station_b
        on_text: root.on_text(self, args[1])
    Button:
        text: 'Obtener Ruta'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "40dp"
        width: "200dp"
        pos_hint: {'center':(.5, .5)}
        on_press: root.get_route(*args)
    Button:
        text: 'Go Back'
        size_hint_y: "0.3dp", "0.3dp"
        size_hint_x: "0.11dp", "0.11dp"
        height: "40dp"
        width: "200dp"
        pos_hint: {'center':(.5, .3)}
        on_press: root.manager.current = 'mainwindow'
